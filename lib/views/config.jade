extends layout

block content
    mixin header()

    .page.config
        a.btn.right(href='/') &lArr; Home
        h2.center Resizive Config

        form.configForm(method='post', action='#')
            label
               | Increment Size
               input.integer-only(type='text', name='increment')
            label
               | Animation Speed (ms)
               input.integer-only(type='text', name='speed')
            label
               | Show Scrollbars?
               input.scrollbars(type='checkbox', name='scrollbars')
            label
               | Show Rulers?
               input.rulers(type='checkbox', name='rulers')
            label
               | Snap To Increment?
               input.snap(type='checkbox', name='snap')
            input.btn.submit(type='submit')

        include ./footer.jade
